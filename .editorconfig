# EditorConfig is awesome: https://editorconfig.org
root = true

# General settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Override for JSON files
[*.json]
indent_style = space
indent_size = 2

# Override for YAML files
[*.yml]
indent_style = space
indent_size = 2

# Override for Markdown files
[*.md]
trim_trailing_whitespace = false

# Override for Solidity files
[*.sol]
indent_style = space
indent_size = 4

# Override for JavaScript and TypeScript files
[*.{js,ts}]
indent_style = space
indent_size = 2

# Override for configuration files
[*.{config,env}]
indent_style = space
indent_size = 2
